<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Пополнить"
            android:layout_width="215dp"
            android:layout_height="68dp"
            android:id="@+id/button_fillAndReturn" android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/editText5"
            android:layout_marginTop="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/test"
            android:id="@+id/editText5"
            android:hint="Введите сумму" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:textColor="@color/colorAccent"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>