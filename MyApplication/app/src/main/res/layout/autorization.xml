<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ZaemCabinetActivity">

    <CheckBox
            android:text="- Я инвестор"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/textViewErrPass"
            android:layout_marginTop="8dp" android:checked="false"
            app:layout_constraintEnd_toEndOf="@+id/password" app:layout_constraintStart_toStartOf="@+id/password"
            android:textColor="@color/colorAccent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Вход"
            android:layout_width="215dp"
            android:layout_height="68dp"
            android:id="@+id/button_autorization"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/checkBox2"
            app:layout_constraintEnd_toEndOf="@+id/checkBox2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/test"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:ems="10"
            android:id="@+id/login"
            android:hint="Введите логин" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"
            android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/test"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Введите пароль"
            app:layout_constraintTop_toBottomOf="@+id/textViewErrLogin" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/login" app:layout_constraintEnd_toEndOf="@+id/login"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" android:textSize="24sp"
            android:fontFamily="sans-serif" android:textColor="@color/colorAccent"/>
    <TextView
            android:layout_width="215dp"
            android:layout_height="19dp"
            android:id="@+id/textViewErrLogin"
            app:layout_constraintTop_toBottomOf="@+id/login" app:layout_constraintStart_toStartOf="@+id/login"
            app:layout_constraintEnd_toEndOf="@+id/login" android:textColor="@android:color/holo_red_light"
            android:textSize="14sp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewErrPass"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/password" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/password"
            android:layout_marginEnd="8dp" android:textColor="@android:color/holo_red_light" android:textSize="14sp"
    />

</android.support.constraint.ConstraintLayout>