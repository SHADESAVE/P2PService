<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/test"
            android:id="@+id/editText"
            android:inputType="number" android:hint="Введите сумму займа"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            android:fontFamily="sans-serif" android:textColor="@color/colorAccent" android:textAlignment="center"
    />
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/test"
            android:id="@+id/editText4"
            android:inputType="number"
            android:hint="Введите срок займа" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/editText"
            android:layout_marginEnd="8dp" android:textSize="24sp" android:textColor="@color/colorAccent"
            android:textAlignment="center"/>
    <Button
            android:text="Создать заявку"
            android:layout_width="250dp"
            android:layout_height="68dp"
            android:id="@+id/button_sendAndReturn3" android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/editText4"
            android:textSize="20sp" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/editText4" app:layout_constraintStart_toStartOf="@+id/editText4"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
    <Button
            android:text="Назад"
            android:layout_width="250dp"
            android:layout_height="68dp"
            android:id="@+id/button_sendAndReturn2" android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_sendAndReturn3"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="@+id/button_sendAndReturn3"
            app:layout_constraintEnd_toEndOf="@+id/button_sendAndReturn3" android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>